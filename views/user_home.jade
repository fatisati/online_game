		link(href='vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet')
		link(href='css/small-business.css', rel='stylesheet')
		link(href='css/user-home.css', rel='stylesheet')
	body
		nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
			.container
				a.navbar-brand(href='#') Start Bootstrap
				button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
					span.navbar-toggler-icon
				#navbarResponsive.collapse.navbar-collapse
					ul.navbar-nav.ml-auto
						li.nav-item.active
							a.nav-link(href='#')
								| Home
								span.sr-only (current)
						li.nav-item
							a.nav-link(href='#') Games
						li.nav-item
							a.nav-link(href='#') Services
						li.nav-item
							a.nav-link(href='#') Contact
		.container
			.row.my-4
				.col-lg-8
					.row.profile
						.col
							.profile-sidebar
								.profile-userpic
									img.img-responsive(src='http://keenthemes.com/preview/metronic/theme/assets/admin/pages/media/profile/profile_user.jpg', alt='')
								.profile-usertitle
									.profile-usertitle-name
										| Marcus Doe
									.profile-usertitle-job
										| Developer
								.profile-userbuttons
									button.btn.btn-success.btn-sm(type='button') Follow
									button.btn.btn-danger.btn-sm(type='button') Message
								.profile-usermenu
									ul.nav
										li.active
											a(href='#')
												i.glyphicon.glyphicon-home
												|                       Overview
										li
											a(href='#')
												i.glyphicon.glyphicon-user
												|                       Account Settings
										li
											a(href='#', target='_blank')
												i.glyphicon.glyphicon-ok
												|                       Tasks
										li
											a(href='#')
												i.glyphicon.glyphicon-flag
												|                       Help
				.col-lg-4
					.container
						.row
							.panel.panel-default.user_panel
								.panel-heading
									h3.panel-title User List
								.panel-body
									.table-container
										table.table-users.table(border='0')
											tbody
												tr
													td(width='10', align='center')
														i.fa.fa-2x.fa-user.fw
													td
														| John Smith
														br
														i.fa.fa-envelope
													td
														| Builder Admin
													td(align='center')
														| Last Login: 6/14/2017
